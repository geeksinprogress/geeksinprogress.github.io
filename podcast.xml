---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
    xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
    xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <atom:link href="{{podcastFeedUrl}}" rel="self" type="application/rss+xml" />
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>en-us</language>
    <copyright>&#xA9; &amp; &#x2117; {{ site.time | date: "%Y" }} {{ site.title | xml_escape }}</copyright>
    <managingEditor>{{ site.managingEditor | xml_escape }}</managingEditor>
    <webMaster>{{ site.webMaster | xml_escape }}</webMaster>        <!-- Fearless leader! -->
    <image>
        <url>{{site.logo}}</url>
        <title>{{ site.title | xml_escape }}</title>
        <link>{{ site.url }}{{ site.baseurl }}</link>
    </image>

    <itunes:new-feed-url>{{podcastFeedUrl}}</itunes:new-feed-url>
    <itunes:subtitle>{{ site.excerpt | xml_escape }}</itunes:subtitle>
    <itunes:author>{{ site.title | xml_escape }}</itunes:author>
    <itunes:image href="{{site.logo}}"/>
    <itunes:owner>
        <itunes:name>{{ site.itunes.name | xml_escape }}</itunes:name>
        <itunes:email>{{ site.itunes.email | xml_escape }}</itunes:email>
    </itunes:owner>

    {% for category in site.itunes.categories %}
        {% if category.subcategories %}
    <itunes:category text="{{ category.text | xml_escape }}">
        {% for subcategory in category.subcategories %}
        <itunes:category text="{{ subcategory.text | xml_escape }}"/>
        {% endfor %}
    </itunes:category>
        {% else %}
    <itunes:category text="{{ category.title | xml_escape }}" />
        {% endif %}
    {% endfor %}

    <itunes:explicit>{{site.itunes.explicit}}</itunes:explicit>

    {% for post in site.categories.podcast %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>{{ post.content | xml_escape }}</description>
        <itunes:subtitle>{{ post.excerpt | xml_escape }}</itunes:subtitle>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid>{{ post.id }}</guid>

        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% if post.cover == 's3' %}
        <itunes:image href="https://s3.amazonaws.com/geeksinprogress/files{{ post.id }}.jpg"/>
        {% else %}
        <itunes:image href="{{site.logo}}"/>
        {% endif %}
        <enclosure url="https://s3.amazonaws.com/geeksinprogress/files{{ post.id }}.mp3" length="{{ post.bytes }}" type="audio/mpeg"/>
        <itunes:duration>{{ post.duration }}</itunes:duration>
        <itunes:explicit>{{ post.explicit }}</itunes:explicit>
      </item>
    {% endfor %}
  </channel>
</rss>
